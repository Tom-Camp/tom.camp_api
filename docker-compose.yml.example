version: "3.9"

services:
  db:
    image: postgres
    volumes:
      - /var/lib/postgresql/data
    environment:
      - POSTGRES_DB=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - tcapi
  api:
    build:
      context: ./tomcamp_api/
      dockerfile: Dockerfile
    command: gunicorn tomcamp_api.wsgi:application --bind 0.0.0.0:8000 --reload
    volumes:
      - ./tomcamp_api:/code/
    environment:
      - POSTGRES_DB_NAME=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DB_HOST=db
      - POSTGRES_DB_PORT=5432
    ports:
      - "8000:8000"
    restart: always
    depends_on:
      db:
        condition: service_healthy
    user: $UID
    networks:
      - tcapi
  ui:
    build:
      context: ./tomcamp_ui/
      dockerfile: Dockerfile
    volumes:
      - ./tomcamp_ui/assets:/app/assets
      - ./tomcamp_ui/cypress:/app/cypress
      - ./tomcamp_ui/public:/app/public
      - ./tomcamp_ui/src:/app/src
      - ./tomcamp_ui/sass:/app/sass
    ports:
      - '3001:3000'
    environment:
      - NODE_ENV=development
      - REACT_APP_API_ENDPOINT=http://localhost:8000
      - REACT_APP_ENVIRONMENT=development
      - WDS_SOCKET_PORT=0
networks:
  tcapi:
    driver: bridge
